<head>
    <%- include('../includes/head') %>
    </head>
    
    <body>
        <%- include('../includes/header') %>
        <main >
          <h1 class="titulo">MI PRODE</h1>
          <div id="home">
          <% grupos.forEach(grupo => { %>
          <div class="flex_center">
            <div class="grupo_1">
              <p class="titulo_grupo">Grupo <%= grupo.nombre %> </p>
              <% partidos.forEach(element => { %>
                <% if (element.grupos.nombre == grupo.nombre) { %>
                  <form class="main_partidos" action="/prode/<%= element.game_id %>?_method=PUT" method="POST">
                    <p class="fecha"><%= element.fecha %> </p>
                    <div class="equipo_1">
                      <div class="img_p left">
                        <img src="<% element.equipos1.imagen %>" alt="<% element.equipos1.pais %>">
                        <p><%= element.equipos1.pais %>
                      </div>
                        <input required min="1" type="number" name="local" id="local">
                    </div>
                    <p>-</p>
                    <div class="equipo_2">
                      <input required min="1" type="number" name="visitante" id="visitante">
                      <div class="img_p right">
                        <p><%= element.equipos2.pais %>
                        <img src="<% element.equipos2.imagen %>" alt="<% element.equipos2.pais %>">
                      </div>
                        
                    </div>
                    <% if (date < element.fecha) { %>
                      <button type="submit" id="submit_create" class="boton">Guardar</button>
                    <% } %>
                  </form>
                <% } %>
              
              <% }) %>
              
              
            </div>
          </div>
          <% }) %>
        </div>
        </main>
</body>
</html>