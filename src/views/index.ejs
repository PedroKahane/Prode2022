<head>
    <%- include('./includes/head') %>
    </head>
    
    <body>
        <%- include('./includes/header') %>
        <main >
          <h1 class="titulo">MI PRODE</h1>
          <div id="home">
          <% grupos.forEach(grupo => { %>
          <div class="flex_center">
            <div class="grupo_1">
              <p class="titulo_grupo">Grupo <%= grupo.nombre %> </p>
              <% partidos.forEach(element => { %>
                <% if (element.grupos.nombre == grupo.nombre) { %>
                  <form class="main_partidos" action="/prode/<%= element.game_id %>?_method=PUT" method="POST">
                    <p class="fecha"><%= element.fecha %> </p>
                    <div class="equipo_1">
                      <div class="img_p left">
                        <img src="<% element.equipos1.imagen %>" alt="<% element.equipos1.pais %>">
                        <p><%= element.equipos1.pais %>
                      </div>
                        <input type="number" name="local" id="local">
                    </div>
                    <p>-</p>
                    <div class="equipo_2">
                      <input type="number" name="visitante" id="visitante">
                      <div class="img_p right">
                        <p><%= element.equipos2.pais %>
                        <img src="<% element.equipos2.imagen %>" alt="<% element.equipos2.pais %>">
                      </div>
                        
                    </div>
                    <% if (date < element.fecha) { %>
                      <button type="submit" id="submit_create" class="boton">Guardar</button>
                    <% } %>
                  </form>
                <% } %>
              
              <% }) %>
              
              
            </div>
          </div>
          <% }) %>
        </div>
        </main>
</body>

<script src="/js/jquery-1.11.1.min.js"></script>
<script>
$(document).ready(function() {
    $('a[href^="#"]').click(function() {
      var destino = $(this.hash);
      if (destino.length == 0) {
        destino = $('a[name="' + this.hash.substr(1) + '"]');
      }
      if (destino.length == 0) {
        destino = $('html');
      }
      $('html, body').animate({ scrollTop: destino.offset().top }, 2000);
      return false;
    });
  });
  </script>
  <script>

      $(document).ready(function(){
          $(".menu_mobile_bt").click(function(){
              $(".menu_over").slideToggle();
            });
        });
        $( window ).resize(function() {
            setMenuDisplay();
            closeMenu($(".menu_mobile_bt"));
        });
    </script>
</html>